<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BackgroundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="BackgroundStyle.ActivityStyle">
        <item name="android:background">@color/background_login</item>
    </style>
    <style name="BackgroundStyle.LayoutButtonStyle">
        <item name="android:layout_marginTop">@dimen/margin_top_login_buttons</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_name</item>
    </style>
    <style name="BackgroundStyle.ActivityStyle.MessagesTextStyle">
        <item name="android:background">@color/background_letters</item>
        <item name="android:layout_margin">@dimen/margin_letters</item>
    </style>
</resources>