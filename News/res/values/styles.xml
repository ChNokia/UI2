<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BackgroundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="BackgroundStyle.FragmentStyle">
        <item name="android:background">@color/backgroundDetail</item>
    </style>
    <style name="TextItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/titleMarginLeft</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/textTitle</item>
        <item name="android:textSize">@dimen/textTittleSize</item>
    </style>
    <style name="TextItemStyle.DateStyle">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">@dimen/dateMarginRight</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textColor">@color/textDate</item>
        <item name="android:textSize">@dimen/textDateSizeLand</item>
    </style>
</resources>